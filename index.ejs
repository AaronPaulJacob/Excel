<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <div class="heading"> 
        SPREADSHEET APPLICATION
    </div>
    <div class="menu">
        <div class="menu_half">
            <div class="heading2"> HOME </div>
            <div class="buttonContainer">
                <div class="buttons BOLD">
                    BOLD
                </div>
                <div class="buttons ITALIC">
                    I
                </div>
                <div class="buttons UNDERLINE">
                    Underline
                </div>
        </div>
        </div>
        <div class="menu_half">
            <div class="heading2">FORMULA BAR</div>
            <div class="buttonContainer"></div>
            <div class="formula_entry">
                Cell Address :
                <input type="text" class="address-input" id="address" >
            </div>
        </div>
    </div>
    <!-- <div class="address">

        <input type="text" class="address-input" id="address" >
        <input type="text" class="formula" id="formula" >
    </div> -->
    <div class="main">
        <div class="grid">
          <!-- // for loop for rows -->
            <%for(let i=0;i<100;i++){%>
                <div class="row">
                    <!--  in each row I want 26 columns -->
                        <%for(let j=0;j<26;j++){%>
                            <div class="cell" contenteditable="true"  ri=<%=i%> ci=<%=j%>>
                                <!-- {<%=i%>,<%=j%>} -->
                            </div>
                        <%}%>
                </div> 
            <%}%>

        </div>
    </div>
    
    
    <script src="script.js"></script>
</body>
</html>